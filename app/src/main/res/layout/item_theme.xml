<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="theme"
            type="com.jobplanet.task.model.ThemeModel" />
    </data>


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/img_item_theme_cover"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:imageUrl="@{theme.coverImage}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@color/black" />

            <TextView
                android:id="@+id/text_item_theme_name"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="@{theme.title}"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/img_item_theme_cover"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_item_theme_cover"
                tools:text="이번주 꼭 지원해야 할 회사" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>